<div class='card'>
  <div class='card-header'>
    <div class='mb-2'>{{title}}</div>
    {{#if isNew}}
      <span class='badge text-bg-success'>New</span>
    {{/if}}
    {{#if isTop}}
      <span class='badge text-bg-danger'>Top</span>
    {{/if}}
  </div>
  <div class='card-body'>
    <p>{{description}}</p>
  </div>
</div>