{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  <main class="p-4">

    <section class="mb-5">
      {{> title big=true title="All Skills"}}
      <ul>
        {{#each main.skills}}
          <li class="m-0">
            {{name}}
            ({{point}})
            {{#if isEnd}}
              (Ще в процесі)
            {{/if}}
          </li>
        {{/each}}
      </ul>
    </section>

    <section>
      {{> title title=" My hobbies"}}
      <ol>
        {{#each main.hobbies}}
          <li class="m-0">
            {{name}}
            {{#if isMain}}
              (favourite)
            {{/if}}
          </li>
        {{/each}}
      </ol>
    </section>

  </main>
</div>

