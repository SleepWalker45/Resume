<main>
  {{! page_header }}
  {{#with page_header}}
    <h1 class='text-center'>{{title}}</h1>
    <p class='text-center'>{{description}}</p>
  {{/with}}
  {{! /page_header }}

  {{! section }}
  {{#with section.about_us}}
    <section class='card card-body'>
      {{#with title_list}}
        <div class='display-6 text-end'>
          {{main}}
        </div>
        <h2 class='text-end'>{{sub}}</h2>
      {{/with}}
      <br />
      <div>
        {{#with button}}
          <button
            class='btn btn-outline-primary'
          >{{text}}</button>
        {{/with}}
      </div>
    </section>
  {{/with}}
  {{! /section }}

  <br />

  {{! advantage }}
  {{#with section.advantage}}
    <section class='card card-body'>
      <div class='display-5'>{{title}}</div>
      <br />

      {{! efficiency }}
      {{#with efficiency}}
        <div class='card card-body'>
          <div class='display-4'>{{title}}</div>
          <br />
          <h6>{{sub_title}}</h6>
          <p>{{description}}</p>
          <div><button
              class='btn btn-outline-warning'
            >{{button}}</button></div>
        </div>
      {{/with}}
      {{! /efficiency }}

      <br />

      {{! innovation }}
      {{#with innovation}}
        <div class='card card-body'>
          <div class='display-4 text-center'>{{title}}</div>
          <br />
          <h6 class='text-center'>{{sub_title}}</h6>
          <p class='text-center'>{{description}}</p>
          <div><button
              class='btn btn-outline-warning'
            >{{button}}</button></div>
        </div>
      {{/with}}
      {{! /innovation }}

      <br />

      {{! collaboration }}
      {{#with collaboration}}
        <div class='card card-body'>
          <div class='display-4 text-end'>{{title}}</div>
          <br />
          <h6 class='text-end'>{{sub_title}}</h6>
          <p class='text-end'>{{description}}</p>
          <div><button
              class='btn btn-outline-warning'
            >{{button}}</button></div>
        </div>
      {{/with}}
      {{! /collaboration }}
    </section>
  {{/with}}
  {{! /advantage }}

  <br />

  {{! agreement }}
  {{#with section.agreement}}
    <section class='card card-body'>
      <div class='display-5'>{{title}}</div>
      <br />
      {{! info }}
      <div class='card card-body'>
        {{#with info}}
          <h5>{{sub_title}}</h5>
          <br />
          {{! detail }}
          {{#with detail}}
            <div class='card card-body'>
              <p>{{text}}</p>
              <div><button
                  class='btn btn-success'
                >{{button}}</button></div>
            </div>
          {{/with}}
          {{! /detail }}
        {{/with}}
      </div>
      {{! /info }}
    </section>
  {{/with}}
  {{! /agreement }}
</main>