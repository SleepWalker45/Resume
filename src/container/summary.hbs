{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  <main>
    {{#with main}}
    <section class="mb-5">
      {{>title big=true title=summary.title}}
      <div>
        <p>
          {{summary.text}}
        </p>
      </div>
    </section>

    <section>
      {{> title title=experience.title}}
      <div>
        <p>
          {{experience.text}}
        </p>
      </div>
    </section>
    {{/with}}
  </main>
</div>

