{{#with main}}
    <main>
        <section class="mb-5">
            {{> title big=true title="My education"}}
            <div>
                <ul>
                {{#each educations}}
                    <li>
                        {{name}}
                        {{#unless isEnd}}
                        (ще в процесі)
                        {{/unless}}
                    </li>
                {{/each}}
                </ul>
            </div>
        </section>
        <section>
            {{> title  title="My certificates"}}
            <div>
                <ul>
                    {{#each certificates}}
                    <li>
                        {{name}}
                        ({{id}})
                    </li>
                    {{/each}}
                </ul>
            </div>
        </section>
    </main>
{{/with}}