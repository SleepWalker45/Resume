<main class="p-4 row">
    {{!-- navigation --}}
    <section>
        <header>
            {{> shopheader }}
        </header>
    </section>
    {{!-- /navigation --}}

    {{!-- breadcrumb --}}
    <section class="col-12 my-3">
        <div class="breadcrumb">
            {{#each breadcrumb}}
                <a class="breadcrumb-item disabled" 
                href="{{url}}">{{name}}</a>
            {{/each}}
        </div>
    </section>
    {{!-- /breadcrumb --}}

    {{!-- productData --}}
    {{#with productData}}
    <section class="col-12">
        <div class="row g-5">
            <div class="col-6">
                <div>
                    <img src="{{img}}" class="mb-4">
                </div>
                {{#with info}}
                <div class="card">
                    <div class="card-body">
                        <div class="card-title"><b>{{title}}</b></div>
                        <p>{{about}}</p>
                        <h5>{{price}}</h5>
                        {{#each category}}
                            {{#if isHot}}
                            <span class="badge text-bg-warning">{{name}}</span>
                            {{/if}}
                            {{#if isNew}}
                            <span class="badge text-bg-primary">{{name}}</span>
                            {{/if}}
                            {{#if isBonus}}
                            <span class="badge text-bg-info">{{name}}</span>
                            {{/if}}
                        {{/each}}
                    </div>
                </div>
                {{/with}}
            </div>


            <div class="col-6">
                {{!-- table --}}
                {{#with item}}
                <table class="table">
                    <thead>
                        <tr>
                            {{#each head}}
                                <th>{{this}}</th>
                            {{/each}}
                        </tr>
                        {{#each body}}
                        <tr>
                            {{#each this}}
                            {{#if @first}}
                            <th>{{this}}</th>
                            {{else}}
                            <td>{{this}}</td>
                            {{/if}}
                            {{/each}}
                        </tr>
                        {{/each}}
                    </thead>
                </table>
                {{/with}}
                {{!-- /table --}}

                {{!-- card --}}
                {{#with param}}
                <div class="card">
                    <div class="card-header">{{title}}</div>
                    {{!-- <div class="card-body"> --}}
                        <div class="list-group">
                            {{#each list}}
                                <div class="list-group-item">{{this}}</div>
                            {{/each}}
                        </div>
                    {{!-- </div> --}}
                </div>
                {{/with}}
                {{!-- /card --}}

                {{!-- alert --}}
                {{#with alert}}
                {{#if isError}}
                <div class=" alert alert-danger my-3">
                    {{text}}
                </div>
                {{/if}}
                {{/with}}
                {{!-- /alert --}}
            </div>
        </div>

        {{!-- actionList --}}
        <div class="card">
            <div class="card-body py-2">
            {{#each actionList}}
                <button class=" btn{{#if isWarning}} btn-warning {{/if}}
                {{#if isError}} btn-outline-danger {{/if}}
                {{#if isSuccess}} btn-success {{/if}}
                {{#if isGood}} btn-outline-success {{/if}} me-3">{{name}}</button>
            {{/each}}
            </div>
        </div>
        {{!-- /actionList --}}
    </section>
    {{/with}}
    {{!-- /productData --}}

    <hr class="my-5">

    {{!-- goodsOtherBlock --}}
    {{#with goodsOtherBlock}}
    <section class="col-12">
        <h4 class="text-center mb-4">{{title}}</h4>
        <div class="row">
            {{#each cards}}
            <div class="col-4">
                {{> shopcard}}
            </div>
            {{/each}}
        </div>
    </section>
    {{/with}}
    {{!-- /goodsOtherBlock --}}

    <hr class="my-5">

    {{> shopaction}}

    <hr class="my-5">

    {{> shopfooter}}
</main>