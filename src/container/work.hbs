{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<main>
  {{#with  main}}
  <section>
    {{>title title="Work History" big=true}}
    <div>
      <ul>
      {{#each works}}
        <li>
          <div>{{position}}</div>

          <br>

          <div>
            {{duration.from}} - 
            {{#if duration.to}}
              {{duration.to}}
            {{else}}
              (досі працюємо)
            {{/if}}
          </div>

          <br>

          <div>
            {{#with company}}
              {{#if url}}
                {{>link href=url text=name blank=true noLine=true}}
              {{else}}
                <b>{{name}}</b>
              {{/if}}
            {{/with}}
          </div>

          <br>

          <div>Projects: ({{projectAmount}})</div>

          <br>

          <ul>
            {{#each projects}}
              <li>
                {{> link href=url text=name blank=true noLine=true}}

                <br>

                <div>
                  <p>
                    {{about}}
                  </p>
                </div>

                <div>
                  <em>Project stacks</em>
                  ({{stackAmount}})

                  <br>
                  <br>

                  <ul>
                    {{#each stacks}}
                      <li>{{name}}</li>
                    {{/each}}
                  </ul>
                </div>

                <br>

                <div>
                  <em>Project awards</em>

                  <br>
                  <br>

                  <ul>
                    {{#each awards}}
                      <li>{{name}}</li>
                    {{/each}}
                  </ul>
                </div>
              </li>
            {{/each}}
          </ul>
        </li>
        <br>
      {{/each}}
      </ul>
    </div>
  </section>
  {{/with}}
</main>


