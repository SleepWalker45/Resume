<main class='p-4'>
    {{> shopheader Logo="ShopReview"}}

    <section class="row">
    
        {{!-- main menu --}}
        {{#with formBlock}}
        <div class="col-8 my-3">
            <h2 class="my-3">{{header}}</h2>
            <p>{{rating.title}}: {{rating.value}}</p>

            <div class="nav nav-tabs">
                {{#each  actionBlock.tabs}}
                    <div class="nav-item">
                        <a class="{{#if isActive}} active {{/if}} nav-link">{{text}}</a>
                    </div>
                {{/each}}
            </div>

            <hr class="my-5">

            {{#with actionBlock.report}}
            <div class="card card-body">
                <div class="mb-2">{{title}}</div>
                <div>
                    <button href="{{button.link}}"
                    class="btn btn-secondary">{{button.text}}</button>
                </div>
            </div> 
            {{/with}}

            <hr class="my-5">

            <h3 class="my-4">{{feedbackBlock.title}}</h3>

            <div>
                {{#each feedbackBlock.buttons}}
                <button href="{{link}}"
                class="btn 
                {{#if isWarning}} btn-warning {{/if}}
                {{#if isSuccess}} btn-success {{/if}}
                {{#if isDanger}} btn-danger {{/if}}">{{text}}</button>
                {{/each}}
            </div>
        </div>
        {{/with}}
        {{!-- /main menu --}}

        {{!-- right menu --}}
        {{#with formBlock.goodsInfo}}
        <div class="col-4 mt-5">
            <div class="card card-body mb-2">
                <img src="{{photo}}">
                <h5 class="mt-2">{{name}}</h5>
            </div>

            <div class="card card-body mb-2">
                <h5>{{price}}</h5>
                {{#if inMarket}} <p>Есть в наличии!</p> {{/if}}
                {{#each buttons}}
                    <div class="mb-1">
                        <a href="{{link}}"
                        class="btn 
                        {{#if isPrimary}} btn-primary {{/if}}
                        {{#if isSecondary}} btn-secondary {{/if}}">{{text}}</a>
                    </div>
                {{/each}}
            </div>

            <div class="card card-body">
                <div>{{seller.title}}: {{seller.value}}</div>
            </div>
        </div>
        {{/with}}
        {{!-- /right menu --}}
    </section>

    <hr class="my-4">

    {{!-- reviewList --}}
    {{#each reviewList}}
    <section class="card card-body mb-2">
        <div class="card">
            <div class="card-header">
                <h6>{{title.userName}}</h6>
                <p>{{title.caption}}</p>
                <div>{{title.date}}</div>
            </div>
            {{#with this.reviewBody}}
            <div class="card-body">
                <div>{{seller.title}}: {{seller.value}}</div>
                <div class="my-2">{{rating.title}}: {{rating.value}}</div>
                <p>{{text}}</p>
                <div>
                    <div><b>{{advantages.title}}</b></div>
                    <p>{{advantages.text}}</p>
                </div>
                <div>
                    <div><b>{{disadvantages.title}}</b></div>
                    <p>{{disadvantages.text}}</p>
                </div>
                <div>
                    {{#each images}}
                    <img src="{{this}}">
                    {{/each}}
                </div>
            </div>
            {{/with}}
        </div>

        <div class="mt-3">
            {{#each reviewBody.coments}}
                <div class="card card-body mb-2 ms-5">
                    <div>{{userName}}</div>
                    <div>{{date}}</div>
                    <p>{{text}}</p>
                </div>
            </div>
            {{/each}}
        </div>
    </section>
    {{/each}}
    {{!-- /reviewList --}}

    {{> shopaction}}

    <hr class="my-5">

    {{> shopfooter}}
</main>